{
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": "false"
    }
  },
  "runArgs": [
    "--privileged",
    "-v", "/Users/evgnskv/.local/share/opencode/auth.json:/home/vscode/.local/share/opencode/auth.json",
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
  ],
  "containerEnv": {
    "DOCKER_BUILDKIT": "1",
    "SDL_VIDEODRIVER": "x11",
    "SDL_FRAMEBUFFER_ACCELERATION": "0",
    "DISPLAY": ":0",
    "SSL_CERT_FILE": "/etc/ssl/certs/ca-certificates.crt",
    "CURL_CA_BUNDLE": "/etc/ssl/certs/ca-certificates.crt",
    "REQUESTS_CA_BUNDLE": "/etc/ssl/certs/ca-certificates.crt"
  },
  "postCreateCommand": [
    "sudo chown vscode:vscode -R /home/vscode",
    "sudo apt update && sudo apt install -y libx11-dev libxext-dev libsdl2-dev",
    "source .venv/bin/activate"
  ]
}

