{
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": "false"
    }
  },
  "runArgs": [
    "--privileged",
    "-v", "/Users/evgnskv/.strongbox:/home/vscode/.strongbox",
    "-v", "/Users/evgnskv/.local/share/opencode/auth.json:/home/vscode/.local/share/opencode/auth.json",
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=/var/run/werf-build,target=/var/run/werf-build,type=bind",
    "source=${env:HOME}/.ssh/config.d/og-infra,target=/etc/ssh/ssh_config.d/custom.conf,type=bind,readonly",
    "source=${env:HOME}/.ssh/og_git_ed25519,target=/home/vscode/.ssh/og_git_ed25519,type=bind,readonly",
    "source=${env:HOME}/.ssh/og_git_ed25519.pub,target=/home/vscode/.ssh/og_git_ed25519.pub,type=bind,readonly",
    "source=${env:HOME}/.ssh/og_infra_ed25519,target=/home/vscode/.ssh/og_infra_ed25519,type=bind,readonly",
    "source=${env:HOME}/.ssh/og_infra_ed25519.pub,target=/home/vscode/.ssh/og_infra_ed25519.pub,type=bind,readonly"
   ],
  "containerEnv": {
    "DOCKER_BUILDKIT": "1",
  },
}

